{
	"name": "teekit",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=22.0.0",
		"npm": ">=10.0.0"
	},
	"scripts": {
		"clean": "rm -rf packages/*/build/* packages/*/dist/* packages/*/lib/* packages/*/test/lib/* packages/*/*.tsbuildinfo packages/images/kettle-artifacts/*",
		"build": "npm --workspace packages/qvl --workspace packages/tunnel run build && npm --workspace packages/demo --workspace packages/kettle run build",
		"build:vm": "npm --workspace packages/images run build:vm",
		"build:vm:incremental": "npm --workspace packages/images run build:vm:incremental",
		"build:vm:clean": "npm --workspace packages/images run build:vm:clean",
		"lint": "eslint .",
		"publish": "npm run clean && npm run build && npm publish -w=packages/kettle -w packages/tunnel -w packages/qvl --access public",
		"dev": "tsc --build --watch",
		"dev:demo": "npm --workspace packages/demo run dev",
		"preview": "npm --workspace packages/demo run preview",
		"server": "npm --workspace packages/demo run server",
		"server:express": "npm --workspace packages/demo run server:express",
		"start": "npm --workspace packages/demo run start",
		"test": "npm --workspaces --if-present run test",
		"benchmark": "BENCHMARK=1 npm --workspace=packages/tunnel run test -- test/benchmark.test.ts"
	},
	"workspaces": [
		"packages/*"
	],
	"ava": {
		"extensions": [
			"ts"
		],
		"nodeArguments": [
			"--import=tsx"
		],
		"files": [
			"test/**/*.test.ts"
		]
	},
	"dependencies": {
		"colorette": "^2.0.20",
		"debug": "^4.4.3"
	},
	"devDependencies": {
		"@types/debug": "^4.1.12",
		"prettier": "3.7.4"
	},
	"version": "0.0.5"
}
