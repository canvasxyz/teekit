{
  "name": "@teekit/kettle-sgx",
  "version": "0.0.1",
  "private": true,
  "description": "SGX deployment for Kettle using Gramine",
  "type": "module",
  "scripts": {
    "build:bundle": "./scripts/build-kettle-bundle.sh",
    "build:bundle:clean": "./scripts/build-kettle-bundle.sh && rm -rf /var/lib/kettle/do-storage/*",
    "build:enclave": "make SGX=1",
    "build:enclave:debug": "make SGX=1 DEBUG=1 LOG_LEVEL=debug",
    "build:direct": "make SGX=0",
    "start": "SGX=1 make run",
    "measurements": "make measurements",
    "check-sgx": "make check-sgx",
    "clean": "make clean",
    "test": "GRAMINE_MODE=sgx ava --serial",
    "test:direct": "GRAMINE_MODE=direct ava --serial"
  },
  "dependencies": {
    "@noble/hashes": "^1.7.0",
    "@scure/base": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/ws": "^8.18.1",
    "ava": "^6.2.0",
    "colorette": "^2.0.20",
    "esbuild": "0.24.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "ws": "^8.18.3"
  },
  "ava": {
    "concurrency": 1,
    "extensions": [
      "ts"
    ],
    "nodeArguments": [
      "--import=tsx"
    ],
    "files": [
      "test/**/*.test.ts"
    ],
    "timeout": "120s"
  }
}
