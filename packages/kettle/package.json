{
	"name": "@teekit/kettle",
	"version": "0.0.5",
	"type": "module",
	"bin": {
		"kettle": "src/lib/cli.js"
	},
	"scripts": {
		"clean": "rm -rf dist/* src/lib/* test/lib/* *.tsbuildinfo",
		"build": "npm run build:worker && npm run build:client",
		"build:client": "vite build",
		"build:client:watch": "vite",
		"build:worker": "tsc --build src && node src/lib/cli.js build-app && node src/lib/cli.js build-worker",
		"start:worker": "node src/lib/cli.js start-worker app.ts",
		"start:launcher": "node src/lib/cli.js publish-local app.ts && node src/lib/cli.js launch manifest.json",
		"start:launcher:remote": "node src/lib/cli.js publish app.ts && node src/lib/cli.js launch manifest.json",
		"pretest": "npm run build",
		"test": "ava --serial"
	},
	"exports": {
		".": "./src/lib/index.js",
		"./worker": "./src/lib/worker/index.js"
	},
	"dependencies": {
		"@scure/base": "^2.0.0",
		"@teekit/qvl": "0.0.5",
		"@teekit/tunnel": "0.0.5",
		"cbor-x": "^1.6.0",
		"colorette": "^2.0.20",
		"hono": "^4.7.5",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/node": "^24.3.1",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@types/ws": "^8.18.1",
		"@types/yargs": "^17.0.34",
		"@vitejs/plugin-react": "^5.0.0",
		"ava": "^6.2.0",
		"esbuild": "^0.24.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.2",
		"vite-plugin-node-polyfills": "^0.24.0",
		"workerd": "^1.20251105.0",
		"ws": "^8.18.3"
	},
	"optionalDependencies": {
		"@esbuild/linux-x64": "^0.25.12",
		"@rollup/rollup-linux-x64-gnu": "^4.50.1"
	},
	"ava": {
		"concurrency": 1,
		"extensions": [
			"ts"
		],
		"nodeArguments": [
			"--import=tsx"
		],
		"files": [
			"test/**/*.test.ts"
		],
		"environmentVariables": [
			"KETTLE_TESTING=1"
		]
	}
}
