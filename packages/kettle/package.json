{
	"name": "@teekit/kettle",
	"version": "0.0.2",
	"type": "module",
	"bin": {
		"kettle": "services/lib/launcher.js"
	},
	"scripts": {
		"clean": "rm -rf dist/* services/lib/* test/lib/* *.tsbuildinfo",
		"build": "npm run build:worker && npm run build:client",
		"build:client": "vite build",
		"build:client:watch": "vite",
		"build:worker": "tsc --build services && node services/lib/buildWorker.js app.ts",
		"start:worker": "node services/lib/startWorker.js app.ts",
		"start:launcher": "node services/lib/buildManifest.js app.ts && node services/lib/launcher.js --manifest manifest.json",
		"start:launcher:remote": "node services/lib/buildRemoteManifest.js app.ts && node services/lib/launcher.js --manifest manifest.json",
		"pretest": "npm run build",
		"test": "ava --serial"
	},
	"exports": {
		".": "./services/lib/index.js",
		"./worker": "./services/lib/worker/index.js"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@scure/base": "^2.0.0",
		"@teekit/qvl": "0.0.2",
		"@teekit/tunnel": "0.0.2",
		"cbor-x": "^1.6.0",
		"chalk": "^4.1.2",
		"hono": "^4.7.5",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/node": "^24.3.1",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@types/ws": "^8.18.1",
		"@types/yargs": "^17.0.34",
		"@vitejs/plugin-react": "^5.0.0",
		"ava": "^6.2.0",
		"esbuild": "^0.24.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.2",
		"vite-plugin-node-polyfills": "^0.24.0",
		"workerd": "^1.20250107.0",
		"ws": "^8.18.3"
	},
	"optionalDependencies": {
		"@libsql/linux-x64-gnu": "^0.5.22",
		"@rollup/rollup-linux-x64-gnu": "^4.50.1"
	},
	"ava": {
		"concurrency": 1,
		"extensions": [
			"ts"
		],
		"nodeArguments": [
			"--import=tsx"
		],
		"files": [
			"test/**/*.test.ts"
		]
	}
}
