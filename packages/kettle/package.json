{
	"name": "@teekit/kettle",
	"version": "0.0.2",
	"type": "module",
	"scripts": {
		"clean": "rm -rf dist/* test/lib/* *.tsbuildinfo",
		"dev": "vite",
		"build": "vite build",
		"server": "tsx server/startWorker.ts",
		"quote-service": "tsx server/startQuoteService.ts",
		"build:worker": "tsx server/buildWorker.ts",
		"start": "npm run demo",
		"start:launcher": "tsx server/buildManifest.ts app.ts && tsx server/launcher.ts --manifest manifest.json",
		"start:launcher:remote": "tsx server/buildRemoteManifest.ts app.ts && tsx server/launcher.ts --manifest manifest.json",
		"test": "ava --serial"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@scure/base": "^2.0.0",
		"@teekit/qvl": "0.0.2",
		"@teekit/tunnel": "0.0.2",
		"cbor-x": "^1.6.0",
		"chalk": "^4.1.2",
		"hono": "^4.7.5",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/node": "^24.3.1",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@types/ws": "^8.18.1",
		"@types/yargs": "^17.0.34",
		"@vitejs/plugin-react": "^5.0.0",
		"ava": "^6.2.0",
		"esbuild": "^0.24.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.2",
		"vite-plugin-node-polyfills": "^0.24.0",
		"workerd": "^1.20250107.0",
		"ws": "^8.18.3"
	},
	"optionalDependencies": {
		"@libsql/linux-x64-gnu": "^0.5.22",
		"@rollup/rollup-linux-x64-gnu": "^4.50.1"
	},
	"ava": {
		"concurrency": 1,
		"extensions": [
			"ts"
		],
		"nodeArguments": [
			"--import=tsx"
		],
		"files": [
			"test/**/*.test.ts"
		]
	}
}
