[Unit]
Description=Kettle Application Launcher
After=network-setup.service cloud-launcher.service
Wants=network-setup.service cloud-launcher.service

[Service]
Type=exec
User=root
Group=root
# Load cloud-specific environment variables (MANIFEST) if available
EnvironmentFile=-/etc/kettle/cloud-launcher.env
ExecStart=/usr/bin/kettle-launcher
Restart=on-failure
RestartSec=10
StandardOutput=append:/var/log/kettle.log
StandardError=append:/var/log/kettle.log

[Install]
WantedBy=minimal.target
